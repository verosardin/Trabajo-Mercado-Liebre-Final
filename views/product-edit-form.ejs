<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Editando: ' + productToEdit.name}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%= productToEdit.name %></i></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products/edit/<%= productToEdit.id %>?_method=PUT" method="POST" enctype="multipart/form-data" id="formulario">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<div class="name invalid-feedback"></div>
						<input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok" class="form-input" value="<%= productToEdit.name %>">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<div class="price invalid-feedback"></div>
						<input type="number" id="price" name="price" placeholder="Ej: 5678" class="form-input" value="<%= productToEdit.price %>">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<div class="discount invalid-feedback"></div>
						<input type="number" id="discount" name="discount" placeholder="Ej: 15" class="form-input" value="<%= productToEdit.discount %>">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<div class="category invalid-feedback"></div>
						<select name="category" id="category" class="form-input">
							<option disabled value="">Elegí</option>
							<option <% if(productToEdit.category == "in-sale") { %> selected <% } %> value="in-sale">En oferta</option>
							<option <% if(productToEdit.category == "visited") { %> selected <% } %> value="visited">Últimos agregados</option>
						</select>
					</div>
					<div class="col-12 col-md-6">
						<label for="file" class="form-label">Añade una imagen</label><br>
						<div class="file invalid-feedback"></div>
						<input type="file" name="file" id="file" required>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<div class="description invalid-feedback"></div>
						<textarea name="description" id="description" class="form-input"><%= productToEdit.description %></textarea>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->

	<script src="/javascripts/validaciones.js"></script>
</body>
</html>